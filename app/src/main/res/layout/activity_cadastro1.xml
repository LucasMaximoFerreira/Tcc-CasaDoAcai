<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo_tela_de_cadastro_padrao"
    tools:context=".CadastroCliente.Cadastro1">

    <Button
        android:id="@+id/btnCad1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/fundo_botao_logar"
        android:fontFamily="@font/chicken_pie"
        android:paddingBottom="4dp"
        android:text="CONTINUAR"
        android:enabled="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

     <EditText
        android:id="@+id/txtNome"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/costum_cpf_icon"
        android:drawableLeft="@drawable/usu_cpf"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/chicken_pie"
        android:hint="usuário"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHighlight="#9300E9"
        android:textColorLink="#9300E9"
        android:textCursorDrawable="@drawable/degrade"
        app:layout_constraintBottom_toTopOf="@+id/txtSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/costum_senha_icon"
        android:drawableLeft="@drawable/usu_senha"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/chicken_pie"
        android:hint="senha"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHighlight="#9300E9"
        android:textColorLink="#9300E9"
        android:textCursorDrawable="@drawable/degrade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445" />


    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/costum_email_icon"
        android:drawableLeft="@drawable/usu_email"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/chicken_pie"
        android:hint="email"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHighlight="#9300E9"
        android:textColorLink="#9300E9"
        android:textCursorDrawable="@drawable/degrade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538" />

    <EditText
        android:id="@+id/txtData"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/costum_data_icon"
        android:drawableLeft="@drawable/usu_data"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/chicken_pie"
        android:hint="data de nascimento"
        android:inputType="date|textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHighlight="#9300E9"
        android:textColorLink="#9300E9"
        android:textCursorDrawable="@drawable/degrade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629" />

    <TextView
        android:id="@+id/lblFacaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chicken_pie"
        android:text="faça o login aqui"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo_tela_de_cadastro2_padrao"
    tools:context=".CadastroCliente.Cadastro2">

    <Button
        android:id="@+id/btnCad2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/fundo_botao_logar"
        android:fontFamily="@font/chicken_pie"
        android:paddingBottom="4dp"
        android:text="CONTINUAR"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chicken_pie"
        android:text="gênero"
        android:textColor="#353232"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCad2"
        app:layout_constraintEnd_toStartOf="@+id/rgGen"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefone"
        app:layout_constraintVertical_bias="0.441" />

    <RadioGroup
        android:id="@+id/rgGen"
        android:layout_width="197dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605">

        <RadioButton
            android:id="@+id/rbMasculino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chicken_pie"
            android:text="masculino"
            android:buttonTint="@color/dd"
            android:textColor="#353232"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/rbFeminino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chicken_pie"
            android:text="feminino"
            android:textColor="#353232"
            android:buttonTint="@color/dd"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/rbPND"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chicken_pie"
            android:text="prefiro não dizer"
            android:buttonTint="@color/dd"
            android:textColor="#353232"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            android:textSize="17sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/txtTelefone"
        android:layout_width="265dp"
        android:layout_height="42dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_telefone_icon"
        android:drawableLeft="@drawable/usu_telefone"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/chicken_pie"
        android:hint="telefone"
        android:inputType="textPersonName|phone"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHighlight="#9300E9"
        android:textColorLink="#9300E9"
        android:textCursorDrawable="@drawable/degrade"
        app:layout_constraintBottom_toTopOf="@+id/rgGen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <EditText
        android:id="@+id/txtCPF"
        android:layout_width="265dp"
        android:layout_height="42dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/costum_doc_icon"
        android:drawableLeft="@drawable/usu_doc"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/chicken_pie"
        android:hint="cpf"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHighlight="#9300E9"
        android:textColorLink="#9300E9"
        android:textCursorDrawable="@drawable/degrade"
        app:layout_constraintBottom_toTopOf="@+id/txtTelefone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

</androidx.constraintlayout.widget.ConstraintLayout>
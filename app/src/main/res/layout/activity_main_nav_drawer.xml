<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fundoperfil"
    tools:context=".Navegacao.main_nav_drawer">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPerfil"
        android:layout_width="110dp"
        android:layout_height="96dp"
        android:src="@drawable/geladinho"
        android:onClick="ClickImg"
        app:civ_border_width="2dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickMenuProdutos">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/menupng"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/linha"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chicken_pie"
            android:padding="12dp"
            android:text="Menu"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickPerfil">

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="40dp"
            android:src="@drawable/perfilpng" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/linha" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chicken_pie"
            android:padding="12dp"
            android:text="Perfil"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickFavoritos">

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pluspng" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/linha" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chicken_pie"
            android:padding="12dp"
            android:text="Favoritos"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickHistorico">
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/historicopng" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/linha" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chicken_pie"
            android:padding="12dp"
            android:text="Historico de Compras"

            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickSobreApp">
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/infopng" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/linha" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chicken_pie"
            android:padding="12dp"
            android:text="Sobre o Aplicativo"

            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickRelatar">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/alertapng" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/linha" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chicken_pie"
            android:padding="12dp"
            android:text="Relatar um Problema"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickSair">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/sairpng"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/linha" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chicken_pie"
            android:padding="12dp"
            android:text="Sair"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>
</LinearLayout>
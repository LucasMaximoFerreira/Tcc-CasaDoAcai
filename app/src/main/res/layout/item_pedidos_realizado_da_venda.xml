<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="@drawable/fundo_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblpedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chicken_pie"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Pedido numero: "
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lblNomeDoProd"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chicken_pie"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/chicken_pie"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="* Clique para ver detalhes"
                android:textColor="#9300E9"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
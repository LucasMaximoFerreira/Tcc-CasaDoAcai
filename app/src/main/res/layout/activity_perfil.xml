<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@drawable/fundoperfil"
    tools:context=".Navegacao.Perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/main_toolbar" />

        <EditText
            android:id="@+id/txtNovoNome"
            android:layout_width="293dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/costum_cpf_icon"
            android:drawableLeft="@drawable/usu_cpf"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="usuário"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.242" />

        <EditText
            android:id="@+id/txtNovoCep"
            android:layout_width="293dp"
            android:layout_height="43dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/cep_costum_icon"
            android:drawableLeft="@drawable/usu_cep"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="cep"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.616" />

        <EditText
            android:id="@+id/txtNovoComp"
            android:layout_width="293dp"
            android:layout_height="43dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/costum_comp_icon"
            android:drawableLeft="@drawable/usu_comp"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="complemento"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.818" />

        <EditText
            android:id="@+id/txtNovoNum"
            android:layout_width="293dp"
            android:layout_height="43dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/costum_numero_icon"
            android:drawableLeft="@drawable/usu_numero"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="número"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.718" />

        <EditText
            android:id="@+id/txtNovoEmail"
            android:layout_width="293dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/costum_email_icon"
            android:drawableLeft="@drawable/usu_email"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="email"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.432" />

        <EditText
            android:id="@+id/txtNovaSenha"
            android:layout_width="293dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/costum_senha_icon"
            android:drawableLeft="@drawable/usu_senha"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="senha"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.335" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="76dp"
            android:layout_height="29dp"
            android:fontFamily="@font/chicken_pie"
            android:paddingStart="5dp"
            android:paddingLeft="2dp"
            android:text="gênero"
            android:textColor="#616161"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.182"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9" />

        <EditText
            android:id="@+id/txtNovotTel"
            android:layout_width="293dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_telefone_icon"
            android:drawableLeft="@drawable/usu_telefone"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="telefone"
            android:inputType="textPersonName|phone"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.528" />

        <RadioGroup
            android:id="@+id/rgNovoGen"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.687"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/include"
            app:layout_constraintVertical_bias="0.915">

            <RadioButton
                android:id="@+id/rbNovoMasculino"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="M"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/rbNovoFeminino"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="F"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/rbNovoPND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="PND"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btnAlterar"
            android:layout_width="151dp"
            android:layout_height="33dp"
            android:background="@drawable/fundo_botao_logar"
            android:fontFamily="@font/chicken_pie"
            android:paddingBottom="4dp"
            android:text="SALVAR"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.977" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chicken_pie"
            android:text="MEU PERFIL"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnAlterar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/include"
            app:layout_constraintVertical_bias="0.175" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/activity_main_nav_drawer"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
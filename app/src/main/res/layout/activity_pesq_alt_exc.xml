<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fundobranco"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    tools:context=".PesqAltExc">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="223dp"
            android:layout_height="243dp"
            android:background="@drawable/borda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/include13"
            app:layout_constraintVertical_bias="0.477" />


        <TextView
            android:id="@+id/lblInserirProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chicken_pie"
            android:text="Deseja inserir um produto?"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/include13"
            app:layout_constraintVertical_bias="0.977" />

        <TextView
            android:id="@+id/lblTipoProd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chicken_pie"
            android:text="TIPO DO PRODUTO"
            android:textColor="#000"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/include13"
            app:layout_constraintVertical_bias="0.342" />

        <EditText
            android:id="@+id/txtPesqProd"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="NOME Do PRODUTO"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.253" />

        <Button
            android:id="@+id/btnPesqProduto"
            android:layout_width="59dp"
            android:layout_height="38dp"
            android:background="@drawable/btnpesq3"
            android:fontFamily="@font/chicken_pie"
            android:paddingBottom="4dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.251" />

        <EditText
            android:id="@+id/txtAltTamanho"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="TAMANHO"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.776" />

        <EditText
            android:id="@+id/txtAltNomeProd"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="NOME Do PRODUTO"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.703" />

        <EditText
            android:id="@+id/txtAltPreco"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/chicken_pie"
            android:hint="PRECO"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHighlight="#9300E9"
            android:textColorLink="#9300E9"
            android:textCursorDrawable="@drawable/degrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.847" />

        <include
            android:id="@+id/include13"
            layout="@layout/main_toolbar" />

        <RadioGroup
            android:id="@+id/rgAltTipoProd"
            android:layout_width="227dp"
            android:layout_height="188dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.515">

            <RadioButton
                android:id="@+id/rbAltAcai"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="Açaí"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/btnAltPicole"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="Picolé"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/btnAltSacole"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="Sacole"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/btnAltSorvete"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="Sorvete"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/btnAltGeladinho"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="Geladinho"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/btnAltCremosinho"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dd"
                android:fontFamily="@font/chicken_pie"
                android:text="Cremosinho"
                android:textColor="#353232"
                android:textColorHighlight="#9300E9"
                android:textColorLink="#9300E9"
                android:textCursorDrawable="@drawable/degrade"
                android:textSize="17sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btnAlterarProd"
            android:layout_width="137dp"
            android:layout_height="32dp"
            android:background="@drawable/fundo_botao_logar"
            android:fontFamily="@font/chicken_pie"
            android:paddingBottom="4dp"
            android:text="ALTERAR"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.921" />

        <Button
            android:id="@+id/btnExcluirProd"
            android:layout_width="137dp"
            android:layout_height="32dp"
            android:background="@drawable/fundo_botao_logar"
            android:fontFamily="@font/chicken_pie"
            android:paddingBottom="4dp"
            android:text="EXCLUIR"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.802"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.921" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/activity_main_nav_drawer"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>